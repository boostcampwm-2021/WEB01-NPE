{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": [
        "jest"
    ]
}
}
