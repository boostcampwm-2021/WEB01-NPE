{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@jest",
      "./src/types"
    ]
  },
  "include": ["src", "package.json", "ormconfig.json", "pm2.json"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
