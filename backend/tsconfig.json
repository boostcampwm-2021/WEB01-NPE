{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
