{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "test", "package.json"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
