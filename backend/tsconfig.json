{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@jest",
      "./src/types"
    ]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
